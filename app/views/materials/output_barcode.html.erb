<!doctype html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>打印条形码</title>
    <%= csrf_meta_tags %>
    <style type="text/css">
      *{ padding: 0; margin: 0;}
      .box {width: 549px; height: 800px; padding:23px;}
      .barcode { width: 179px; height: 100px; float: left;}
      .margin24 { margin-left: 6px;}
    </style>
</head>

<body>
     <div class="box">
       <% i = 1 %>
       <% @data.each do |material| %>
         <% (1..material[:num].to_i).each do |index| %>
          <div class="barcode <%= (i % 3 == 1) ? "" : "margin24" %>"><%= image_tag material[:code_img], :width => '179', :height => '100' %></div>
          <% i += 1 %>
         <% end %>
       <% end %>              
     </div>
</body>
</html>
