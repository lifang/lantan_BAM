<!doctype html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>打印条形码</title>
    <%= csrf_meta_tags %>
    <style type="text/css">
      *{ padding: 0; margin: 0;}
      .box {width: 2292px; height: 3320px; padding: 94px;}
      .barcode { width: 590px; height: 524px; float: left; padding: 45px 79px;}
      .margin24 { margin-left: 24px;}
    </style>
</head>

<body>
     <div class="box">
       <% i = 1 %>
       <% @data.each do |material| %>
         <% (1..material[:num].to_i).each do |index| %>
          <div class="barcode <%= (i % 3 == 1) ? "" : "margin24" %>"><%= image_tag material[:code_img] %></div>
          <% i += 1 %>
         <% end %>
       <% end %>              
     </div>
</body>
</html>
