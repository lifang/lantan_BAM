<%= javascript_include_tag "/assets/products.js" %>
<%= javascript_include_tag "/assets/kindEditor/kindeditor-min.js" %>
<%= javascript_include_tag "/assets/kindEditor/zh_CN.js" %>
<div class="main">
  <div class="box">
    <div class="data_box">
      <div class="data_menu">
        <% if permission?(:sales, :add_service) %>
          <a href="javascript:void(0)" class="add_btn" onclick="update_status('<%= params[:store_id] %>')">销售端不显示</a>
          <a href="javascript:void(0)" class="add_btn" onclick="add_package('<%= params[:store_id] %>')">添加服务</a>
        <% end %></div>
      <div class="clear"></div>
      <div class="data_body" id="materials_tab_table">
        <div>
          <% unless @services.blank? %>
            <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
              <thead>
                <tr class="hbg">
                  <td>&nbsp;&nbsp;&nbsp;</td>
                  <td>服务代码</td>
                  <td>服务名称</td>
                  <td>施工时间(分钟)</td>
                  <td>类别</td>
                  <td>技师</td>
                  <td width="30%">操作</td>
                </tr>
              </thead>
              <tbody>
                <% @services.each do |service| %>
                  <tr>
                    <td><input type="checkbox" value="<%=service.id  %>"<% unless service.show_on_ipad %>checked<%end%> /></td>
                    <td><%= service.code %></td>
                    <td><%= service.name %></td>
                    <td><%= service.cost_time %></td>
                    <td><%= Product::PRODUCT_TYPES[service.types] %></td>
                    <td><%= "#{Staff::LEVELS[service.level1]} - #{Staff::LEVELS[service.level2]}" %></td>
                    <td class="operation" >
                      <% if permission?(:sales, :delete_service) %><a href="javascript:void(0)"  onclick="serve_delete('<%=  service.id %>','<%=params[:store_id] %>')">删除</a><% end %>
                      <% if permission?(:sales, :edit_service) %><a href="javascript:void(0)" onclick="edit_service('<%= params[:store_id] %>','<%=  service.id %>')">编辑</a><% end %>
                      <a href="javascript:void(0)" class="see_btn" onclick="show_service('<%=params[:store_id] %>','<%=  service.id %>')">查看</a>
                      <a href="/stores/<%= params[:store_id] %>/products/<%=service.id %>" target="_blank" class="see_btn"  >预览</a>
                      <% if permission?(:sales, :add_service) %>
                        <%= link_to (!service.commonly_used ? "作为常用" : "不作为常用"), commonly_used_store_product_path(params[:store_id], service.id), :remote => true, 'data-type' => "script", :method => :post, :class => "see_btn", :id => service.id %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= form_for :ids,:url=>"/stores/#{params[:store_id]}/products/update_status",:html=>{:id=>"update_ids"} do %>
              <input type="hidden" value="" name="ids" id="ids"/>
              <input type="hidden" value="" name="vals" id="vals"/>
            <% end %>
            <div class="pageTurn">
              <%= will_paginate @services,:class=>"pageTurn",:previous_label=>"上一页",:next_label=>"下一页" %>
            </div>
          <%else%>
            目前没有服务
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%if  flash[:notice]%>
  <script type="text/javascript">tishi_alert("<%=  flash[:notice] %>")</script>
<% end %>
