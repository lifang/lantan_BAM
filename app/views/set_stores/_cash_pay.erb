<div class="accountsTab_client">
  <div class="at_client_con">
    <ul>
      <li><span>客户姓名：</span><%=@customer.name%></li>
      <li><span>手机号码：</span><%=@customer.mobilephone%></li>
      <li><span>车牌：</span><%=@car_num.num%></li>
      <li>
        <%if @customer.group_name %>
          <span>单位：</span><%=@customer.group_name%>
        <%else%>
          <span>客户属性：</span>个人客户
        <%end%>
      </li>
    </ul>
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_tab_table">
      <thead>
        <tr class="hbg">
          <td>订单号</td>
          <td>项目</td>
          <td>数量</td>
          <td>单价</td>
          <td>小计</td>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.code %></td>
            <% if @order_prods[order.id] %>
              <% prod = @order_prods[order.id][0] %>
              <td><%= prod.name %></td>
              <td><%= prod.pro_num %></td>
              <td><%= prod.price %></td>
            <%else%>
              <td><%= "--" %></td>
              <td><%= "--" %></td>
              <td><%= "--" %></td>
            <%end%>
            <td><%=  order.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% @sv_card.each do |card| %>
  <div class="accountsTab_pay">
    <div class="accountsTab_pay_title"><h3>储值卡</h3><span class="pay_span"><%=card.name%></span>
      <div class="radio">
        <input name="radio_<%= card.id %>" type="checkbox"  onclick="check_sum(<%= card.id %>,this)" class="pay_check" /><span>使用此卡支付</span></div></div>
    <div class="accountsTab_pay_item">
      <label>储值卡余额：<span id="left_<%= card.id %>"><%= card.left_price %></span></label>
    </div>
    <div class="accountsTab_pay_item">
      <label>本单：</label><input onblur="check_num(<%= card.id %>,this.value)" type="text" id="order_<%=card.id%>" disabled />
    </div>
    <div class="accountsTab_pay_item">
      <label>储值卡密码：</label><input  onblur="check_post(<%= card.id %>)" type="password" id="pwd_<%=card.id%>"  disabled/>
    </div>
  </div>
<% end %>
<div class="deal_money">
  <ul>
    <li>应付金额：<span id="due_pay"><%=@orders.map(&:price).inject(0){|sum,num|sum+num}%></span></li>
    <li>付款总计：1400.00</li>
    <li>待付金额：1400.00</li>
    <li><a href="#" class="deal_money_btn">可以结账</a></li>
  </ul>
</div>
<div class="accountsTab_way">
  <div class="at_way_h">
    <ul>
      <li class="hover">现金</li>
      <li>银行卡</li>
      <li>挂单</li>
      <li class="brnone">免单</li>
    </ul>
  </div>
  <div class="at_way_b">
    <div>
      <div class="way_item"><label>现金实收：</label><input name="" type="text" /></div>
      <div class="way_item"><label>收入现金：</label><input name="" type="text" /></div>
      <div class="way_item"><label>找零：</label><input name="" type="text" /></div>
      <div class="way_item radio">
        <input name="" type="radio" value="" /><span>抹零</span>
      </div>
    </div>
    <div style="display: none">
      <div class="way_item"><label>银行卡实付：</label><input name="" type="text" /></div>
      <div class="way_item"><label>流水账号：</label><input name="" type="text" /></div>
    </div>
    <div style="display: none">
      <div class="way_textarea">
        <textarea cols="" rows=""></textarea>
      </div>
    </div>
    <div style="display: none">
      <div class="way_item"><label>输入权限密码：</label><input name="" type="text" /></div>
    </div>
  </div>
</div>
