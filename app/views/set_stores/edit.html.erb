<%= javascript_include_tag "set_stores" %>
<div class="data_box">
  <div class="clear"></div>
  <div class="data_body">
    <div>
      <form>
      <div class="item">
        <label>选择省市：</label>
        <select id="store_province" name="store_province" class="staff">
          <% @province.each do |p| %>
          <option value="<%= p.id %>"<% if @store_city.parent_id == p.id %>selected<% end %>><%= p.name %></option>
          <% end %>
        </select>
        <select id="store_city" name="store_city" class="staff">
          <% @cities.each do |c| %>
          <option value="<%= c.id %>" <% if @store_city.id == c.id %>selected<% end %>><%= c.name %></option>
          <% end %>
        </select>
      </div>
      <div class="item">
        <label>门店名称：</label><input id="store_name" name="store_name" type="text" value="<%= @store.name %>"/>
      </div>
      <div class="item">
        <label>负责人：</label><input id="store_contact" name="store_contact" type="text" value="<%= @store.contact %>"/>
      </div>
      <div class="item">
        <label>联系电话：</label><input id="store_phone" name="store_phone" type="text" value="<%= @store.phone %>"/>
      </div>
      <div class="item">
        <label>地址：</label><input id="store_address" name="store_address" type="text" value="<%= @store.address %>"/>
      </div>
      <div class="item">
        <label>开店时间：</label><input type="text" id="store_opened_at" name="store_opened_at" class="Wdate" 
                                  value="<%= @store.opened_at.nil? ? "" : @store.opened_at.strftime("%Y-%m-%d") %>"
                                  onclick="WdatePicker();" readonly/>
      </div>
      <div class="item">
        <label>门店状态：</label>
        <select id="store_status" name="store_status">
          <% Store::S_STATUS.each do |key, value| %>
          <option value="<%= key.to_i %>"<% if @store.status == key.to_i %>selected<% end %>><%= value %></option>
          <% end %>
        </select>
      </div>
      <div class="item">
        <label>门店坐标：</label>
        <span>X:</span><input id="store_position_x" name="store_position_x" type="text" class="xyAxis" value="<%= @store.position.split(',')[0] if @store.position %>"/>
        <span>Y:</span><input id="store_position_y" name="store_position_y" type="text" class="xyAxis" value="<%= @store.position.split(',')[1] if @store.position %>"/>
        <a href="http://api.map.baidu.com/lbsapi/getpoint/index.html" target="_blank" class="mapIcon"><img src="/assets/mapIcon.png"  alt="点击获取地图坐标" title="点击获取地图坐标"/></a>
      </div>
        <div class="item_textarea">
           <label>门店照片：</label>
           <input type="file" class="file"/>
           <span class="show_pic"><img src="<%= @store.img_url.nil? ? "" : @store.img_url.gsub("img#{@store.id}", "img#{@store.id}_#{Constant::STORE_PICSIZE[1]}") %>"/></span>
        </div>
        <div class="clear"></div>
        <div class="btn_box">
          <button type="button" onclick="edit_store_validate()" class="confirm_btn">确定</button>
        </div>
      </form>
    </div>
    <div class="clear"></div>
  </div>
</div>