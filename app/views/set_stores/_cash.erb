<div class="data_item_title">
  <ul><li>待付款客户：<%= @orders.length %></li></ul>
</div>
<% n = 0 %>
<% @orders.each do |k,v|%>
  <% if n%10==0 %> <div id="page_<%=n/10%>" <% if n/10 !=0 %>style="display:none"<%end%>><%end%>
    <div class="data_item_list">
      <div class="di_list_r">
        <div class="register">
          <div class="orderGoods" >
            <div class="di_downUp" id="<%=k[:c_id]%>" onclick="$('#c_<%=k[:c_id]%>').slideToggle(1000,function(){
              $('#'+this.id.split('_')[1]).find('span').toggleClass('highlight');})">
              <span class="highlight">&darr;</span><span>&uarr;</span></div>
            <ul>
              <li>客户姓名：<%= k[:c_name] %></li>
              <li>车牌：<%= k[:c_num] %></li>
              <li>手机号码：<%=k[:tel]%></li>
              <li><%if k[:g_name] %>单位：<%=k[:g_name]%><%else%>客户属性：个人客户<%end%></li>
            </ul>
          </div>
          <div class="merchant" id="c_<%= k[:c_id] %>" style="display:none">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
              <thead>
                <tr class="hbg">
                  <td>开单时间</td>
                  <td>订单编号</td>
                  <td>工位</td>
                  <td>接待员</td>
                  <td>技师</td>
                  <td>项目</td>
                  <td>数量</td>
                  <td>单价</td>
                  <td>合计</td>
                </tr>
              </thead>
              <tbody>
                <%v.each do |order|%>
                  <tr>
                    <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                    <td><%= order.code %></td>
                    <td><%= @stations[order.s_id].nil? ? "--" : @stations[order.s_id] %></td>
                    <td><%= @staffs[order.front_staff_id] %></td>
                    <% tech = [@staffs[order.cons_staff_id_1],@staffs[order.cons_staff_id_2]].compact.uniq %>
                    <td><%=tech.blank? ? "--" : tech.join("、")%></td>
                    <% prod = @order_prods[order.id] && @order_prods[order.id][0] %>
                    <% if prod %>
                      <%  o_prod = @order_prods[order.id][0]%>
                      <td><%= o_prod.name %></td>
                      <% num = o_prod.pro_num.nil? ? 0 : o_prod.pro_num %>
                      <td><%=  num %></td>
                      <% price = o_prod.price.nil? ? 0 : o_prod.price %>
                      <td><%=  price %></td>
                      <td><%= price * num  %></td>
                    <% else %>
                      <td><%= "--"%></td>
                      <td><%= "--"%></td>
                      <td><%= "--" %></td>
                      <td><%= "--" %></td>
                    <%end%>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="accounts">
              <ul>
                <li>总计：<%=  v.map(&:price).inject(0){|num,p|num+p}%></li>
                <li>客户签名：李四</li>
                <li><a href="javascript:void(0)" class="accounts_btn" onclick="pay_this_order(<%=params[:store_id]  %>,<%=k[:c_id]  %>)">结账</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% n+= 1 %>
    <% if n%10==0 || n==@orders.length %> </div><%end%>
<% end %>
<div class="pageTurn">
  <%for i in 0..(@orders.length%10==0 ? @orders.length/10-1 : @orders.length/10)  do %>
    <%if i==0%>
      <em id="<%= i %>" class="current"><%=  i+1%></em>
    <%else%>
      <a href="javascript:void(0)" id="<%=i%>" onclick="show_current(this)" ><%= i+1 %></a>
    <%end%>
  <% end %>
</div>
