<p>
  <label><span class="red">*</span>车牌号码</label>
  <input type="text" id="car_num" value="<%=  @num%>" onblur="auth_car_num(this,<%=params[:store_id]%>)" onkeyup ="auth_car_num(this,<%=params[:store_id]%>)"/>
  <label>客户姓名</label>
  <input type="text" id="c_name" <% if @customer %>  value="<%= @customer.name %>" readonly <%end%>  />
  <label>手机号</label>
  <input type="text" id="c_number" <% if @customer %>  value="<%= @customer.mobilephone %>" readonly <%end%> />
  <label>其他联系方式</label>
  <input type="text" id="other_way" <% if @customer %>  value="<%= @customer.other_way %>" readonly <%end%> />
</p>
<p>
  <label>单位</label>
  <input type="text" style="width: 368px;" id="c_group" <% if @customer %>  value="<%= @customer.group_name %>" readonly <%end%>  />
  <label>通讯地址</label>
  <input type="text" style="width: 368px;" id="c_address" <% if @customer %>  value="<%= @customer.address %>" readonly <%end%>  />
</p>
<input type="hidden" id="old_customer" value="<%= @num %>" />
<input type="hidden" id="checked_item" />