<div class="popup_box">
  <h1>新建工位<a href="javascript:void(0)" class="close">关闭</a></h1>
  <div class="popup_body">
    <%= form_tag "/stores/#{@store.id}/station_datas", :method => :post, :remote => true, "data-type" => 'script', :class=>"station_form" do %>
      <div class="popup_body_area">
        <div class="item station_name">
          <label><span class="red">*</span>名称：</label>
          <input type="text" size="30" id="station_name" name="station_name"/>
        </div>
        <div class="item">
          <label><span class="red">*</span>编号：</label>
          <input type="text" size="30" id="station_code" name="station_code"/>
        </div>
        <div class="item">
          <label>是否有工控机：</label>
          <input type="checkbox" id="station_has_controller" name="station_has_controller" value="1"
                 onclick="handleController(this)"/>
        </div>
        <div class="controller_input">
          <div class="item">
            <label>采集器编号：</label>
            <input type="text" size="30" id="station_collector_code" name="station_collector_code" disabled="disabled"/>
          </div>
        </div>
        <div class="item_textarea">
          <label><span class='red'>*</span>服务：</label>
          <div class="item_rbox">
            <dl>
              <% @services.each do |k,v| %>
                <dt><input type="checkbox" onclick="$(this).parent().parent().find('#<%=k%> input').attr('checked',this.checked);" /><%=  @categories[k] %></dt>
                <%v.each do |p|%>
                  <dd id="<%=k%>"><input type="checkbox" name="product_ids[]" value="<%= p.id %>"/><%= p.name %></dd>&nbsp;&nbsp;
                <%end%>
              <% end unless @services.blank?  %>
            </dl>
          </div>
        </div>
      </div>
      <div class="btn_box">
        <button type="button" class="confirm_btn" onclick="new_station_valid(this)">确定</button>
      </div>
    <% end %>
  </div>
</div>