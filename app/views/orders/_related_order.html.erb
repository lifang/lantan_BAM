<div class="tab_popup" id="related_order_partial" style="z-index:101 !important">
  <div class="popup_box">
    <h1>相关<%= @order.return_types == Order::IS_RETURN[:YES] ? "退单" : "订单" %><a href="javascript:void(0)" class="close">关闭</a></h1>
    <div class="popup_body">
      <div class="popup_body_area">
        <% if @order.return_types != Order::IS_RETURN[:YES] %>
          <div class="data_body_p">
            <span>订单编号： <%= @order.code %></span>
            <span>消费时间：<%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
            <span>接待人员：<%= @order.front_s_name %></span>
            <span>施工人员：
              <% if @order.cons_s_name1 or @order.cons_s_name2 %>
                <%= (@order.cons_s_name1 +  "、") if @order.cons_s_name1 %>
                <%= @order.cons_s_name2 if @order.cons_s_name2 %>
              <% else %>--
              <% end %>
            </span>
          </div>
        <%else%>
          <div class="seeProDiv">
            <div class="seeProDiv_l">退单号(原单号)：</div>
            <div class="seeProDiv_r"><%=  @order.nil? ? "" : @order.code  %></div>
          </div>
          <div class="seeProDiv">
            <div class="seeProDiv_l">接单人员：</div>
            <div class="seeProDiv_r"><%= @order.front_s_name %></div>
          </div>
          <div class="seeProDiv">
            <div class="seeProDiv_l">退单时间：</div>
            <div class="seeProDiv_r"><%=(@order.nil? || @order.updated_at.nil?) ? "" : @order.updated_at.strftime("%Y-%m-%d") %></div>
          </div>
          <div class="seeProDiv">
            <div class="seeProDiv_l">原消费时间：</div>
            <div class="seeProDiv_r"><%=(@order.nil? || @order.created_at.nil?) ? "" : @order.created_at.strftime("%Y-%m-%d") %></div>
          </div>
        <% end %>
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_tab_table">
          <thead>
            <tr class="hbg">
              <% if  @order.return_types == Order::IS_RETURN[:YES] %>
                <td>退单状态</td><%end%>
              <td>服务项目</td>
              <td>数量</td>
              <td>单价(元)</td>
            </tr>
          </thead>
          <tbody>
            <% @order_prods[@order.id].each do |v| %>
              <tr>
                <% if @order.return_types == Order::IS_RETURN[:YES] %>
                  <td><input type="checkbox" disabled
                             <%if v.return_types == Order::IS_RETURN[:YES] %>checked<% end  %> /></td>
                  <% end %>
                <td><%= v.name %></td>
                <td><%= v.pro_num %></td>
                <td><%= v.price %></td>
              </tr>
            <% end if @order_prods[@order.id] %>
            <% if @sale %>
              <tr>
                <td colspan="3">
                  参加活动：<%= @sale.name %>&nbsp;<%= Sale::DISC_TYPES_NAME[@sale.disc_types] %>&nbsp;
                  <%= format("%.2f", @order_pay_types[OrderPayType::PAY_TYPES[:SALE]][0].total_price) if @order_pay_types and @order_pay_types[OrderPayType::PAY_TYPES[:SALE]] %>
                </td>
              </tr>
            <% end %>
            <% if @order_pay_types and @order_pay_types[OrderPayType::PAY_TYPES[:PACJAGE_CARD]] %>
              <tr><td colspan="3">使用套餐卡<%= @order_pay_types[OrderPayType::PAY_TYPES[:PACJAGE_CARD]][0].total_num.to_i %>次</td></tr>
            <% end %>
            <% if @order_pay_types and @order_pay_types[OrderPayType::PAY_TYPES[:DISCOUNT_CARD]] %>
              <tr><td colspan="3">使用打折卡优惠<%= format("%.2f", @order_pay_types[OrderPayType::PAY_TYPES[:DISCOUNT_CARD]][0].total_price) %>元</td></tr>
            <% end %>
          </tbody>
        </table>
        <% if @order.return_types == Order::IS_RETURN[:YES] %>
          <div class="seeProDiv">
            <div class="seeProDiv_l">退单原因：</div>
            <div class="seeProDiv_r"><%=  Customer::RETURN_REASON[@order.return_reason] %></div>
          </div>
          <div class="seeProDiv">
            <div class="seeProDiv_l">退单金额：</div>
            <div class="seeProDiv_r"><%= @order.return_fee %></div>
          </div>
          <div class="seeProDiv">
            <div class="seeProDiv_l">商品去向：</div>
            <div class="seeProDiv_r"><%= Order::DIRECT[@order.return_direct]%></div>
          </div
          <div class="seeProDiv">
            <div class="seeProDiv_l">操作员：</div>
            <div class="seeProDiv_r"><%=@order.return_name%></div>
          </div>
        <% end %>
        <div class="clear"></div>
        <div class="otherWay">
          <div class="amount">
            总计(元)：<%= format("%.2f", @order.price) %>&nbsp;&nbsp;<% if @order.is_free %>(本次免单)<% end %>
            <% if @order.status == Order::STATUS[:NORMAL] %>
              <input value="取消订单" class="confirm_btn" onclick="handle_order(<%=@order.id  %>,'cancel')" type="button"  />
            <% else  %>
              <% work_order = @order.work_orders[0] %>
              <% if  work_order && work_order.status == WorkOrder::STAT[:WAIT_PAY] %>
                <input value="结束付款" class="confirm_btn" onclick="handle_order(<%=@order.id  %>,'complete_pay')" type="button"  />
              <%elsif work_order && work_order.status == WorkOrder::STAT[:SERVICING] %>
                <input value="结束施工" class="confirm_btn" onclick="handle_order(<%=@order.id  %>,'complete_work')" type="button"  />
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>