<div class="table_box_h">
  <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
    <thead>
      <tr class="hbg">
        <td width="10%">资产编号</td>
        <td width="15%">资产名称</td>
        <td width="10%">购入时间</td>
        <td width="8%">购入数量</td>
        <td width="8%">购入价</td>
        <td width="10%">资产总价</td>
        <td width="8%">经手人</td>
        <td width="8%">折旧月份</td>
        <td width="10%">净值</td>
        <td width="6%">类别</td>
        <td width="6%">状态</td>
      </tr>
    </thead>
    <tbody>
      <%unless @fixed_assets.blank?%>
        <% asset = @fixed_assets[0] %>
        <tr>
          <td><%= asset.code%></td>
          <td><%= asset.name%></td>
          <td><%= asset.pay_date.strftime("%Y-%m-%d")%></td>
          <td><%= asset.num%></td>
          <td><%= asset.price %></td>
          <td><%= asset.amount %></td>
          <td><%= @n_staffs[asset.operate_staffid].nil? ? "--" : @n_staffs[asset.operate_staffid] %></td>
          <td><%= asset.share_month%></td>
          <td><%= "--"%></td>
          <td><%= @defines[asset.types].nil? ? "--" : @defines[asset.types] %></td>
          <td><%= FixedAsset::STATUS_NAMES[asset.status] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
