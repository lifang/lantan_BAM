<div class="main">
  <div class="box">
    <div class="data_box">
      <div class="tab_head">
        <ul>
          <li class="hover">应收款</li>
          <li onclick="window.location.href='/stores/<%=params[:store_id]%>/finance_reports/payable_account'" >应付款</li>
          <li onclick="window.location.href='/stores/<%=params[:store_id]%>/finance_reports/manage_account'">往来帐户管理</li>
        </ul>
      </div>
      <div class="data_body">
        <div class="search">
          <div><label>时间：</label>
            <input id="c_first" type="text"  onclick="WdatePicker({preLoad:true,maxDate:'<%=Time.now.strftime("%Y-%m-%d")%>'})" readonly class="Wdate"
                   value="<%=@start_time%>"/> 到
            <input id="c_last" type="text" onclick="WdatePicker({preLoad:true,maxDate:'<%=Time.now.strftime("%Y-%m-%d")%>'})" readonly class="Wdate"
                   value="<%=@end_time%>" /></div>
          <div style="float:right;"><button class="search_btn" style="padding:-1px 0;" onclick="pay_account(this,<%=params[:store_id]%>)">查 &nbsp&nbsp&nbsp&nbsp询</button></div>
        </div>
        <div class="finnace_title" id="finnace_title" style="height:32px;">
          <ul>
            <li>应收款：<span><%=@pay_orders.values.flatten.length%></span>笔</li>
            <li>总金额：<span><%=@pay_orders.values.flatten.map(&:p_price).inject(0){|sum,n|sum+n}.round(2)%></span></li>
          </ul>
        </div>
        <div class="data_item" id="account">
          <%= render :partial=>'pay_account',:object=>Category::TYPES[:OWNER] %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="mask"></div>
<div class="tab_popup" id="pay_account"></div>

