<div class="data_box">
  <div class="second_menu">
    <a href="/stores/<%= params[:store_id] %>/set_stores" >门店信息</a>
    <a href="/stores/<%= params[:store_id]%>/set_functions">功能设置</a>
    <a href="/stores/<%= params[:store_id]%>/adverts">led广告设置</a>
    <a href="/stores/<%= params[:store_id]%>/messages/send_list" class="hover">短信设置</a>
  </div>
  <div class="tab_head">
    <ul>
      <li class="hover">消费明细</li>
      <li onclick="window.location.href='/stores/<%=params[:store_id]%>/messages/send_alipay'">充值明细</li>
      <li onclick="window.location.href='/stores/<%=params[:store_id]%>/messages/send_list'">开关设置</li>
    </ul>
  </div>
  <div class="clear"></div>
  <div class="data_body">
    <div class="search">
      <div><label>时间：</label>
        <input id="c_first" type="text"  onclick="WdatePicker({preLoad:true,maxDate:'<%=Time.now.strftime("%Y-%m-%d")%>',qsEnabled:false,isShowClear:false})" readonly class="Wdate"
               value="<%=@start_time%>"/> 到
        <input id="c_last" type="text" onclick="WdatePicker({preLoad:true,maxDate:'<%=Time.now.strftime("%Y-%m-%d")%>',qsEnabled:false,isShowClear:false})" readonly class="Wdate"
               value="<%=@end_time%>" /></div>
      <div id="order_types">扣费操作：
        <select  id="cate_n">
          <option value="">全部</option>
          <% MessageRecord::SET_MESSAGE.each do |key,value| %>
            <option value="<%= key %>"><%= value %></option>
          <% end%>
        </select>
      </div>
      <div><button class="search_btn" onclick="search_finance(this,<%=params[:store_id]%>)">查&nbsp&nbsp询</button></div>
    </div>
    <div class="data_item" id="cash_over">
      <div class="data_item_title">费用总计：<%= @total_num %>（元）</div>
      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
        <thead>
          <tr class="hbg">
            <td width="15%">扣费操作</td>
            <td width="40%">内容</td>
            <td width="15%">时间</td>
            <td width="10%">数量</td>
            <td width="10%">费用（元）</td>
            <td width="10%">操作</td>
          </tr>
        </thead>
        <tbody>
          <% unless @message_records.blank? %>
            <%@message_records.each do |record|%>
              <tr>
                <td><%= MessageRecord::SET_MESSAGE[record.types]%></td>
                <td><%= record.content %></td>
                <td><%= record.send_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td><%=  record.total_num  %></td>
                <td><%= record.total_fee %></td>
                <td><a href="/stores/<%=params[:store_id]%>/messages/<%=record.id%>/load_message#<%=record.id%>" target="_blank">详情</a></td>
              </tr>
            <% end%>
          <%else%>
            <tr><td  colspan="5">暂无明细</td></tr>
          <%end%>
        </tbody>
      </table>
      <div class="pageTurn">
        <%= will_paginate @message_records,:class=>"pageTurn",:previous_label=>"上一页",:next_label=>"下一页" if @message_records.length >0%>
      </div>
    </div>
  </div>
</div>
<div id="message_detail" class="tab_popup"></div>

