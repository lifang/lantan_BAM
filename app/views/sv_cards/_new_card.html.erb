<div class="popup_box">
  <h1>新建优惠卡<a href="JavaScript:void(0)" class="close">关闭</a></h1>
  <%= form_for(@card, :url => store_sv_cards_path(@store), :html => {:multipart => true, :id => "new_card_form"}) do |f| %>
  <%= f.hidden_field :store_id %>
    <div class="popup_body">
      <div id="popup_body_area" class="popup_body_area">
        <div class="item">
          <label>名称：</label><%= f.text_field :name %>
        </div>
        <div class="item">
          <label>类型：</label>
          <%= f.select :types, SvCard::S_FAVOR.invert, {}, {:onchange => "card_type_validate()"}%>
        </div>
        <div class="item">
          <label>折扣：</label>
          <%= f.text_field :discount, :disabled => true %>
        </div>
         <div class="item">
          <label>打折卡金额：</label>
          <%= f.text_field :price, :disabled => true %>
        </div>
        <div class="item">
          <label>使用范围:</label>
          <%= f.select :use_range, SvCard::S_USE_RNGE.invert %>
        </div>
        <div class="item_textarea">
          <label>图片：</label>
          <%= f.file_field :img_url %>
        </div>
        <div class="item_textarea">
          <label>具体内容：</label>
          <%= f.text_area :description, :class => "width_textarea" %>
        </div>
        <div id="setObj" class="setObj">
          <div class="setobj_name">项目：</div>
          <div class="setobj_box">
            <div class="seto_list">
              <span>充<input id="started_money" name="started_money" type="text" class="input_s"/>元</span>&nbsp;&nbsp;
              <span>送<input id="ended_money" name="ended_money" type="text" class="input_s"/>元</span>
            </div>
          </div>
        </div>
      </div>
      <div class="btn_box">
        <button class="confirm_btn" id="new_sv_card_btn" onclick="return create_card_validation()">确定</button>
        <button type="button"class="cancel_btn">取消</button>
    </div>
      <% end %>
  </div>
</div>